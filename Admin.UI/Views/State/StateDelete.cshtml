@model StateDto

<form asp-action="StateDelete">
    <br />
    <div class="container border p-3">
        <h1 class="text-white text-center">Delete State</h1>

        <hr />
        <div class="row">
            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;">State Id</label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="StateId" disabled class="form-control" />
            </div>
            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;">State Name</label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="StateName" disabled class="form-control" />
            </div>
            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;">State Code</label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="StateCode" disabled class="form-control" />
            </div>
            <div class="col-5 offset-2">

                <a asp-action="StateIndex" class="btn-primary btn form-control ">Back to List</a>
            </div>
            <div class="col-5">
                <input type="submit" value="Delete" class="btn btn-danger form-control" />

            </div>

        </div>

        <div>
        </div>
    </div>
</form>

@section Scripts
{

    <partial name="_ValidationScriptsPartial" />
}