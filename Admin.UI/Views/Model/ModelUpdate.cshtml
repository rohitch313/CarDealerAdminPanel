@model PvaModelDto

<form asp-action="ModelUpdate" method="post">
    <br />
    <div class="container border p-3">
        <h1 class="text-white text-center">Update Model</h1>

        <hr />
        <div class="row">
            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;">Model Id</label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="ModelId" readonly class="form-control" />
            </div>
            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;">Model Name</label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="ModelName" class="form-control" />
                <span asp-validation-for="ModelName" class="text-danger"></span>
            </div>
            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;">Model Code</label>
            </div>
            <div class="col-10 pb-3">
                <input asp-for="ModelCode" class="form-control" />
                <span asp-validation-for="ModelCode" class="text-danger"></span>
            </div>
            <div class="col-5 offset-2">
                <a asp-action="ModelIndex" class="btn-primary btn form-control ">Back to List</a>
            </div>
            <div class="col-5">
                <input type="submit" value="Update" class="btn btn-warning form-control" />
            </div>
        </div>
        <div></div>
    </div>
</form>

@section Scripts
{
    <partial name="_ValidationScriptsPartial" />
}
